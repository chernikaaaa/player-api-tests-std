<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Player API Suite" parallel="methods" thread-count="3">
    <test name="Create player">
        <packages>
            <package name="player.create.*"/>
        </packages>
    </test>
    <test name="Delete player">
        <packages>
            <package name="player.delete.*"/>
        </packages>
    </test>
    <test name="Update player">
        <packages>
            <package name="player.update.*"/>
        </packages>
    </test>
    <test name="Get player">
        <packages>
            <package name="player.get.*"/>
        </packages>
    </test>
    <test name="Get all players">
        <packages>
            <package name="player.getall.*"/>
        </packages>
    </test>
</suite>
